```gitignore
# --- OS ---
.DS_Store
Thumbs.db

# --- IDEs ---
.idea/
.vscode/
*.sublime-project
*.sublime-workspace

# --- Composer ---
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
composer.phar

# --- Drupal runtime ---
/web/sites/*/files/
!/web/sites/*/files/.htaccess

# Settings (do not commit secrets)
/web/sites/*/settings.php
/web/sites/*/settings.local.php
/web/sites/*/services.yml
/web/sites/*/services.local.yml

# Config sync (will be enabled later)
/config/sync/

# --- Tests ---
/web/sites/simpletest/
/phpunit.xml
/phpunit.xml.dist

# --- Frontend ---
/node_modules/
/dist/
/build/

# --- ddev (keep config, ignore local state) ---
.ddev/.dbimageBuild/
.ddev/.ddev-database/
.ddev/.drush/
.ddev/.homeadditions/
.ddev/.imported/
.ddev/.mysql/
.ddev/.postgres/
.ddev/.sqlite/
.ddev/.cache/
.ddev/.state*
.ddev/.router*
.ddev/.traefik*
.ddev/.webimageBuild*
.ddev/.ddev-webserver*

# --- Logs ---
*.log
