<?xml version="1.0"?>
<ruleset name="Agency Drupal">
    <description>Drupal coding standards for custom code only.</description>

    <config name="drupal_core_version" value="10" />
    <arg name="basepath" value="." />
    <arg name="extensions" value="php,module,inc,install,test,profile,theme,yml" />
    <arg value="p" />

    <file>web/modules/custom</file>
    <file>web/themes/custom</file>
    <file>web/profiles/custom</file>

    <rule ref="Drupal" />
    <rule ref="DrupalPractice" />
</ruleset>
